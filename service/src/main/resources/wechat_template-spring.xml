<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
>

	<!-- 微信模板 -->
	<bean id="wechatTemplateFactory" class="com.hualala.app.wechat.util.template.WechatTemplateFactoryImpl" >
		<property name="defaultJson">
			<value>
				<![CDATA[
					{
						"queue":{
							"alarm":{
								"modelID":"[modelID]",
								"templateID":"[templateID]",
								"first":"[first]",
								"keyword1":"[keynote1]",
								"keyword2":"[keynote2]",
								"keyword3":"[keynote3]",
								"keyword4":"[keynote4]",
								"remark":"[remark]"
							}
						},
						"order": {
							"submit" {
								"modelID": "[modelID]",
								"templateID": "[templateID]",
								"first": "[first]",
								"keyword1": "[keynote1]",
								"keyword2": "[keynote2]",
								"keyword3": "[keynote3]",
								"keyword4": "[keynote4]",
								"keyword5": "[keynote5]",
								"remark": "[remark]",
								"color3": "#ff3300",
								"color4": "#ff3300"
							}
						}
					}
				]]>
			</value>
		</property>
	</bean>

</beans>